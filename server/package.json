{
  "name": "mobeigi.com-server",
  "version": "1.0.0",
  "author": "Mo Beigi",
  "description": "Server source code for the mobeigi.com website.",
  "homepage": "https://mobeigi.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mobeigi/mobeigi.com"
  },
  "bugs": {
    "url": "https://github.com/mobeigi/mobeigi.com/issues",
    "email": "me@mobeigi.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start": "node -r module-alias/register ./dist --env=production",
    "start:dev": "nodemon",
    "test": "ts-node -r tsconfig-paths/register ./spec",
    "test:dev": "nodemon --config ./spec/nodemon.json",
    "clean": "rm -rf node_modules/ dist/"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "@types/node-cron": "^2.0.3",
    "@types/xml2json": "^0.11.3",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "command-line-args": "^5.1.1",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.4.1",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.4",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.0",
    "moment-timezone": "^0.5.31",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "pug": "^3.0.1",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.6",
    "@types/jasmine": "^3.6.3",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "find": "^0.3.0",
    "fs-extra": "^9.1.0",
    "jasmine": "^3.6.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
